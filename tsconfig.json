{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": false,
        "noImplicitAny": true,
        "noImplicitReturns": false, // TODO: Change this to true
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": false,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@types/node",
            "@nuxtjs/color-mode"
        ]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}
